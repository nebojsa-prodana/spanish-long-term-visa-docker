# Cita Checker Configuration
# Copy this file to .env and fill in your details

# =============================================================================
# LOCATION (REQUIRED)
# =============================================================================

# Province name
PROVINCIA=Barcelona

# Office/Sede ID or name
# Use "99" for "Cualquier oficina" (any office)
# Or specify office ID from list below
OFICINA=99

# Tramite type
# Use the value from the tramite options below
# Default: POLICÍA-TOMA DE HUELLAS (EXPEDICIÓN DE TARJETA)
TRAMITE=4010

# Check interval in minutes (default: 30)
CHECK_INTERVAL=30

# =============================================================================
# EMAIL NOTIFICATIONS (REQUIRED)
# =============================================================================

# Your email address to receive notifications
EMAIL_TO=your-email@gmail.com

# SMTP server settings
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587

# SMTP authentication
# For Gmail: use your email and app-specific password
# Generate at: https://myaccount.google.com/apppasswords
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# =============================================================================
# PHONE CALL NOTIFICATIONS (OPTIONAL - Highly Recommended!)
# =============================================================================

# Twilio credentials (optional but recommended for aggressive notifications)
# Sign up for FREE trial at: https://www.twilio.com/try-twilio
# Free trial includes $15 credit (enough for ~150 calls or ~500 SMS)

# Leave empty to disable phone notifications
TWILIO_ENABLED=false

# Twilio Account SID (starts with AC...)
TWILIO_SID=

# Twilio Auth Token
TWILIO_TOKEN=

# Twilio phone number (from)
TWILIO_FROM=

# Your phone number (to receive calls)
# Format: +34XXXXXXXXX (with country code)
TWILIO_TO=

# Enable phone CALL (true/false)
# If false, only SMS will be sent (if Twilio is enabled)
ENABLE_CALL=true

